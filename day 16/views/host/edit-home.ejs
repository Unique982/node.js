<%-include('../partials/head')%>
  </head>

  <body>
    <%-include('../partials/nav')%>
    <main class="container mx-auto mt-8 bg-white rounded-lg shadow-lg p-8">
      <h1 class="text-3xl font-bold mb-6 text-center text-gray-800"><%= editing ? "Update Home":"Register Home"%></h1>
      <form action="/host/<%= editing ? 'edit-home':'add_home'%>" method="POST" class="max-w-md mx-auto space-y-4">
        <div>
          <input type="hidden" name="id" value="<%= editing ? home._id :''%>">
        </div>
      
        <div>
          <label for="houseName" class="block text-gray-700 font-semibold">Name:</label>
          <input 
            type="text" 
            name="houseName" 
            value="<%= editing ? home.houseName :'' %>"
            id="house_name" 
            placeholder="Enter House" 
            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
        </div>
        <div>
          <label for="price" class="block text-gray-700 font-semibold">Price:</label>
          <input 
            type="number" 
            name="price" 
            value="<%= editing ? home.price:'' %>"
            id="price" 
            placeholder="Enter Price" 
            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
        </div>
        <div>
          <label for="location" class="block text-gray-700 font-semibold">Location:</label>
          <input 
            type="text" 
            name="location" 
            value="<%=editing ? home.location :'' %>"
            id="location" 
            placeholder="Enter Location" 
            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
        </div>
        <div>
          <label for="rating" class="block text-gray-700 font-semibold">Rating:</label>
          <input 
            type="text" 
            name="rating" 
            value="<%=editing ? home.rating:'' %>"
            id="rating" 
            placeholder="Enter Rating" 
            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
        </div>
        <div>
          <label for="photo" class="block text-gray-700 font-semibold">Photo:</label>
          <input 
            type="text" 
            name="photoUrl" 
            value="<%=editing ?home.photoUrl :''%>"
            id="photo" 
            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
        </div>
        <div>
          <label for="photo" class="block text-gray-700 font-semibold">Description:</label>
          <input 
            type="text" 
            name="description" 
            value="<%= editing ? home.description :'' %>"
            id="photo" 
            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
        </div>
        <div class="text-center">
          <input 
            type="submit" 
            value="<%= editing ? 'Update Home' :'Add Home' %>" 
            class="btn btn-primary btn-sm">
        </div>
      </form>
    </main>
    
    <%-include('../partials/footer')%>
